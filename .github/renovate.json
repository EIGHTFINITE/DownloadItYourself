{
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":disableDependencyDashboard"
  ],
  "labels": ["dependencies", "do-not-merge"],
  "packageRules": [
    {
      "matchPackageNames": ["cheerio", "cloudscraper", "electron", "har-validator", "node", "postman-request", "request-promise", "request-promise-core", "spdx-expression-parse", "top-user-agents"],
      "labels": ["dependencies", "automerge"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "fast-forward",
      "ignoreTests": true
    }
  ],
  "ignoreDeps": ["npm-6"]
}
