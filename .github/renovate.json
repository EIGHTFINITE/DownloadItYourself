{
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":disablePrControls",
    ":gitSignOff",
    ":rebaseStalePrs",
    ":skipStatusChecks"
  ],
  "labels": ["dependencies", "do-not-merge"],
  "rollbackPrs": true,
  "packageRules": [
    {
      "matchPackageNames": ["better-npm-audit", "cheerio", "cloudscraper", "corepack", "electron", "eslint", "neostandard", "node", "npm", "request-promise", "request-promise-core", "spdx-expression-parse"],
      "labels": ["dependencies", "automerge"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "fast-forward",
      "ignoreTests": true
    },
    {
      "matchPackageNames": ["postman-request"],
      "labels": ["dependencies", "automerge"],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+-postman\\.[0-9]+$/",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "fast-forward",
      "ignoreTests": true,
      "rollbackPrs": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  }
}
